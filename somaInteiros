/******************************************************************************

soma dos N = 5 primeiros numeros inteiros

1+2+3+4+5 = 15

*******************************************************************************/
#include <stdio.h>

int soma (int n)
{
    if ( n == 0)
     return n;
     else 
     {
         return n + soma(n-1);
         
     }
}

int main()
{   
    soma(5);
    printf("\no valor da soma dos 5 primeiros numeros e: %d", soma(5));

    return 0;
}
